{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"all": true,
			"style": {
				"useWhile": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"noAssignInExpressions": "off"
			},
			"nursery": {
				"all": true,
				"useImportRestrictions": "off",
				"useNamingConvention": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentSize": 4,
		"indentStyle": "tab",
		"lineWidth": 140,
		"formatWithErrors": true
	},
	"files": {
		"ignore": ["node_modules/", "dist"]
	},
	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
